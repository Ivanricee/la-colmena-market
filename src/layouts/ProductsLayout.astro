---
import Layout from '@/layouts/Layout.astro'
interface Props {
  title: string
  description: { html: string }
}

const { title, description } = Astro.props
---

<Layout {title}>
  <main class="sm:p-8 px-4 sm:px-6 lg:px-8 py-8">
    <div class="space-y-8">
      <h1 class="text-4xl font-bold text-foreground mb-2">{title}</h1>
      <div class="text-lg text-muted-foreground" set:html={description.html} />
      <slot />
    </div>
  </main>
</Layout>
