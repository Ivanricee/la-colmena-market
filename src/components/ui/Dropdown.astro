---
import { Icon } from 'astro-icon/components'
import Button from './Button.astro'
interface Props {
  cantidad: number
}
const { cantidad } = Astro.props
---

<Button
  variant="default"
  id="dropdownDefaultButton"
  data-dropdown-toggle="dropdown"
  class="bg-brand hover:bg-brand-strong focus:ring-brand-medium rounded-base box-border inline-flex items-center justify-center border border-transparent px-4 py-2.5 text-sm leading-5 font-medium text-white shadow-xs focus:ring-4 focus:outline-none"
  type="button"
>
  Cantidad 10
  <Icon name="lucide:chevron-down" size={16} />
</Button>

<!-- Dropdown menu -->
<div
  id="dropdown"
  class="bg-neutral-primary-medium border-default-medium rounded-base z-10 hidden w-44 border shadow-lg"
>
  <ul class="text-body p-2 text-sm font-medium" aria-labelledby="dropdownDefaultButton">
    {
      Array.from({ length: cantidad }, (_, i) => (
        <li>
          <a
            href="#"
            class="hover:bg-neutral-tertiary-medium hover:text-heading inline-flex w-full items-center rounded p-2"
          >
            Cantidad: {i + 1}
          </a>
        </li>
      ))
    }
  </ul>
</div>
