---
interface Props {
  href?: string
  target?: string
  class?: string
  [key: string]: any
}
const { class: className, href, target, ...props } = Astro.props
const Wrapper = href ? 'a' : 'div'
const wrapperProps = href ? { href, target } : {}
---

<div class={` p-6 rounded-lg border border-border  ${className}`} {...props}>
  <Wrapper {...wrapperProps} class="flex h-full w-full flex-col">
    <!-- Header section -->
    <header class="flex w-full flex-nowrap">
      <div class="flex flex-1 flex-col">
        <slot name="card-header-title" />
        <slot name="card-header-title-description" />
      </div>
      <div class="flex items-start">
        <slot name="card-header-action" />
      </div>
    </header>

    <!-- Main content -->

    <slot />

    <!-- Footer -->

    <slot name="card-footer" />
  </Wrapper>
</div>
