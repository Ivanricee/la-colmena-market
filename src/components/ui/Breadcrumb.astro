---
interface Props {
  items?: Array<{ label: string; href?: string }>
  className?: string
}

const { items = [], className = '' } = Astro.props as Props
---

<nav aria-label="Breadcrumb" class={`mt-4 text-sm text-muted-foreground ${className}`}>
  <ol class="flex items-center">
    {
      items.map((item, idx) => (
        <li class="flex items-center">
          {idx > 0 && <span class="text-muted-foreground mx-1 md:mx-2">/</span>}
          {item.href ? (
            <a href={item.href} class="text-foreground hover:text-primary transition-colors">
              {item.label}
            </a>
          ) : (
            <span class="text-foreground">{item.label}</span>
          )}
        </li>
      ))
    }
  </ol>
</nav>
<ol class="flex items-center gap-2"></ol>
