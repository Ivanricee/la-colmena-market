---
import { Icon } from 'astro-icon/components'
import Card from '../ui/Card.astro'
---

<Card x-show="step === 1" class="bg-card" x-cloak>
  <div class="flex flex-col space-y-1.5 pb-4">
    <h3
      class="flex items-center gap-2 text-xl leading-none font-semibold tracking-tight sm:text-2xl"
    >
      <Icon name="lucide:check" size={20} class="h-5 w-5 text-primary" />
      Confirma tu pedido
    </h3>
  </div>

  <div class="p-6 pt-0 space-y-6">
    {/* Customer summary */}
    <div class="space-y-2">
      <h4 class="font-semibold text-foreground flex items-center gap-2">
        <!--  create icon user   -->
        <Icon name="lucide:user" size={20} class="h-5 w-5 text-primary" />
        Datos del cliente
      </h4>
      <div class="p-4 rounded-lg bg-muted/30 space-y-1">
        <p class="text-foreground">{"form.getValues('name')"}</p>
        <p class="text-sm text-muted-foreground">
          Tel: {'form.getValues("phone")'}
        </p>
        {
          /*form.getValues("notes") && (
            <p class="text-sm text-muted-foreground">
              Notas: {form.getValues("notes")}
            </p>
          )*/
        }
      </div>
    </div>

    {/* Address summary */}
    <div class="space-y-2">
      <h4 class="font-semibold text-foreground flex items-center gap-2">
        <Icon name="lucide:map-pin" size={20} class="h-5 w-5 text-primary" />
        Punto de entrega
      </h4>
      <div class="p-4 rounded-lg bg-muted/30">
        <p class="font-medium text-foreground">
          {'selectedAddress?.label'}
        </p>
        <p class="text-sm text-muted-foreground">
          {'selectedAddress?.full'}
        </p>
      </div>
    </div>

    {/* Items summary */}
    <div class="space-y-2">
      <h4 class="font-semibold text-foreground flex items-center gap-2">
        <Icon name="lucide:package" size={20} class="h-5 w-5 text-primary" />
        Productos
      </h4>
      <div class="space-y-2">
        {
          /*items.map((item) => (
            <div
              key={item.product.id}
              class="flex justify-between items-center p-3 rounded-lg bg-muted/30"
            >
              <div class="flex items-center gap-3">
                <div class="h-10 w-10 rounded bg-gradient-warm overflow-hidden">
                  <img
                    src={item.product.image}
                    alt={item.product.name}
                    class="h-full w-full object-contain p-1"
                  />
                </div>
                <div>
                  <p class="text-sm font-medium text-foreground">
                    {item.product.name}
                  </p>
                  <p class="text-xs text-muted-foreground">
                    {item.quantity} Ã— ${item.product.price.toFixed(2)}
                  </p>
                </div>
              </div>
              <span class="font-semibold text-foreground">
                ${(item.product.price * item.quantity).toFixed(2)}
              </span>
            </div>
          ))*/
        }
      </div>
    </div>
  </div>
</Card>
