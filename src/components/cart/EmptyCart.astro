---
import { Icon } from 'astro-icon/components'
import Button from '../ui/Button.astro'

interface Props {
  [key: string]: any
}
const { ...props } = Astro.props
---

<div class="flex flex-col items-center px-4 py-20 text-center space-y-6" {...props}>
  <Icon name="lucide:shopping-bag" size={25} class="h-16 w-16 mx-auto text-muted-foreground" />
  <h1 class="text-3xl font-bold text-foreground">Tu carrito está vacío</h1>
  <p class="text-muted-foreground text-lg">Agrega productos desde nuestro catálogo para comenzar</p>

  <Button href="/" class="w-fit">
    Explorar
    <Icon name="lucide:arrow-right" size={25} class="ml-2 h-5 w-5" />
  </Button>
</div>
