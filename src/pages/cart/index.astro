---
import EmptyCart from '@/components/cart/EmptyCart.astro'
import Layout from '@/layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import Button from '@/components/ui/Button.astro'
import Stepper from '@/components/cart/Stepper.astro'
import OrderSummary from '@/components/cart/OrderSummary.astro'
import Step1 from '@/components/cart/Step1.astro'
import Step2 from '@/components/cart/Step2.astro'
import Step3 from '@/components/cart/Step3.astro'
import Step4 from '@/components/cart/Step4.astro'
---

<Layout title="Mi carrito">
  <div x-data="cartHandler">
    <EmptyCart x-show="itemCount === 0 && step === 1" x-cloak />
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- STEPPER -->
      <Stepper />
      {/* Main content */}
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2 space-y-6">
          {/* Cart review */}
          <Step1 />
          {/* Customer info + Delivery address â€” single form for both steps */}
          <form novalidate x-ref="checkoutForm" x-on:submit.prevent="nextStep">
            <Step2 />
            {/* Step 3: Delivery address */}
            <Step3 />
          </form>
          {/* Step 4: Confirmation */}
          <Step4 />
          {/* Navigation buttons */}
          <div class="flex justify-between">
            <Button x-show="step > 1" variant="secondary" x-on:click="prevStep" type="button">
              <Icon name="lucide:arrow-left" size={20} />
              Anterior
            </Button>
            <Button href="/catalogo" x-show="step === 1" variant="secondary">
              <Icon name="lucide:arrow-left" size={20} />
              Seguir comprando
            </Button>
            <Button
              class="disabled:opacity-35"
              x-show="step < 4"
              type="button"
              x-bind:disabled="!canProceed"
              x-on:click="nextStep"
            >
              Siguiente
              <Icon name="lucide:arrow-right" size={20} />
            </Button>

            <div class="relative">
              <Button
                variant="whatsapp"
                x-show="step === 4"
                x-on:click="finalize"
                x-bind:disabled="isSubmitting"
                class="disabled:opacity-60 disabled:cursor-not-allowed min-w-[200px]"
                size="lg"
                type="button"
              >
                <span x-show="!isSubmitting" class="flex items-center gap-2">
                  <Icon name="lucide:message-circle" size={20} />
                  Finalizar por WhatsApp
                </span>
                <span x-show="isSubmitting" x-cloak class="flex items-center gap-2">
                  <svg
                    class="animate-spin h-5 w-5 text-white"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                  >
                    <circle
                      class="opacity-25"
                      cx="12"
                      cy="12"
                      r="10"
                      stroke="currentColor"
                      stroke-width="4"></circle>
                    <path
                      class="opacity-75"
                      fill="currentColor"
                      d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                  </svg>
                  Enviando...
                </span>
              </Button>
              <div
                x-show="finalizeError"
                x-cloak
                class="absolute top-full left-0 mt-2 w-max max-w-xs rounded-lg border border-red-200 bg-red-50 dark:bg-red-900/20 dark:border-red-800/30 px-4 py-2 text-sm text-red-700 dark:text-red-400 z-10"
              >
                <p class="font-medium" x-text="finalizeError?.message"></p>
              </div>
            </div>
          </div>
        </div>
        {/* Sidebar */}
        <OrderSummary />
      </div>
    </div>
  </div>
</Layout>
